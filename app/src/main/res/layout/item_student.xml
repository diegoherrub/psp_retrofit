<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/student_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_student_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_student_name"
            style="@style/item_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="student name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_student_image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_student_email"
            style="@style/item_text_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="student email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_student_image"
            app:layout_constraintTop_toBottomOf="@id/item_student_name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_student_course"

            style="@style/item_text_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="student course"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_student_image"
            app:layout_constraintTop_toBottomOf="@id/item_student_email" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_student_subjects"
            style="@style/item_text_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="student subjects"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_student_image"
            app:layout_constraintTop_toBottomOf="@id/item_student_course" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>